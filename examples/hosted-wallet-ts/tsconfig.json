{
  "compilerOptions": {
    "module": "ESNext", // Ensure ES module syntax is used
    "target": "ESNext", // Optional, but targets newer ECMAScript versions
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "moduleResolution": "node",
    "outDir": "./dist", // Optional, ensures .ts files are compiled to a specific directory
    "resolveJsonModule": true
  }
}
