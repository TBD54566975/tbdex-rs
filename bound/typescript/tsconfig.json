{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/esm",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "pkg",
    "bundle-wasm",
    "tests"
  ]
}
